<view class="page_person">
	<view class="person_info">
		<image src="{{userInfo.avatarUrl}}" class="person_img"></image>
		<view class="info_right">
			<text class="name">{{userInfo.nickName}}</text>
			<view class="look_collect">56个货主查看 5个货主收藏</view>
		</view>
	</view>

	<view class="car_source" bindtap='gotoTrucks'>
		<image class="post_img" src="/images/posted.png"></image>
		<text class="text_source">我发布的车源</text>
		<view class="jiantou">
			<text>></text>
			</view>
	</view>

	<navigator url="../favorites/favorites" class="my_collect">
		<image class="collext_img" src="/images/collected.png"></image>
		<text class="text_source">我的收藏</text>
		<view class="collect_jiantou">
			<text>></text>
			</view>
	</navigator>
</view>